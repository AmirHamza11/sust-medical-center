<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp">



    <TextView
        android:id="@+id/outgoing_message_date_time_textView_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21/12/21 7:15 PM"
        android:visibility="gone"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/outgoing_message_message_textView_id"
        android:layout_marginEnd="4dp"/>



    <TextView
        android:id="@+id/outgoing_message_message_textView_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/outgoing_message_date_time_textView_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:paddingStart="12dp"
        android:paddingEnd="10dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:text="Outgoing Message"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:background="@drawable/outgoing_message_shape"
        android:maxWidth="350dp"
        android:elevation="1dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>